#!/bin/bash
if  [  `echo  $1  |  grep-e  '^.$'`  ]
then
echo  "Es  un  unico  caracter"
if  [[  $1  =~  [A-Z]  ]]
then
echo  "Y  es  una  letra  mayuscula"
elif  [[  $1  =~  [a-z]  ]]
then
echo  "Y  es  una  letra  minuscula"
else
echo  "No  es  una  letra,  es  otro  caracter"
fi
else
echo  "No  es  un  unico  caracter"
fi
